
from psl import *

class FontManager:

    def __init__(self):
        self.fonts = {}

    def getFont(self, face, size):
        try:
            return self.fonts[(face,size)]
        except:
            font = ofTrueTypeFont()
            font.loadFont(face,size)
            self.fonts[(face,size)] = font
            return self.fonts[(face,size)]

manager = FontManager()

def getFont(face, size):
    global manager
    return manager.getFont(face, size)
