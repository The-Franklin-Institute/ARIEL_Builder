
import FTGL

class FontCache:

    def __init__(self):
        self.fonts = {}

    def getFont(self, face, size):
        try:
            return self.fonts[(face,size)]
        except:
            self.fonts[(face,size)] = FTGL.TextureFont(face)
            self.fonts[(face,size)].SetFaceSize(size)
            return self.fonts[(face,size)]

cache = FontCache()

