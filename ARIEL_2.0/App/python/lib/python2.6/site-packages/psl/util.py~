
from psl import *
import os
from OpenGL.GLUT import glutInitDisplayString

def smoothAndLovely():
    glutInitDisplayString("rgba double samples>=16 ")
    

def setupWindow(*args):
    currentDir = os.getcwd()
    apply(ofSetupOpenGL, args) #This call changes the directory for an unknown reason, messing our paths
    os.chdir(currentDir)
